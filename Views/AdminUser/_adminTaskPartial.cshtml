@model IEnumerable<DataEntry_Tracker.Models.CommonModel>
<div class="box" style="overflow-x:auto">
    <table class="table table-striped" id="pendigcotablelist">
        <thead>
            <tr>
                <th>R.Id</th>
                <th>Task Id</th>
                <th>Op. Name</th>
                <th>Un. Name</th>
                <th>Buyer Name</th>
                <th>Style Name </th>
                <th>SLA</th>
                <th>N.O.T</th>
                <th>Rq. By</th>
                <th>Co.Name </th>
                <th>Priority</th>
                <th>Aging</th>
                <th>Create Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{ int count = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RequestId</td>
                    <td>@item.RequestCodId</td>
                    <td>@item.BaseOperationName</td>
                    <td>@item.UnitName</td>
                    <td>@item.BuyerName</td>
                    <td>@item.StyleName</td>

                    <td>@item.RequestTime min</td>
                    <td>@item.NoOfTransections</td>
                    <td>@item.UserName</td>
                    <td>@item.CoordinatorName</td>
                    <td>@item.Priority</td>
                    <td>@item.Aging</td>
                    <td>@item.CreateDate.ToString("dd MMM yyyy h:mm tt")</td>
                    <td>
                        <input type="button" data-toggle="modal" data-target="#modalTaskPreview" class="btn btn-success btn-sm" onclick="GetInformationBYRequest(@item.RequestId,@item.RequestCodId,@item.BaseOperationId,@item.RivisionNo)" value="@item.AssignTo" />
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>


